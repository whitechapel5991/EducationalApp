@model RegisterViewModel

    <h1>Only one step separates you from the world of knowledge</h1>
    <div class="row">

        <div class="col-md-12 ml-5">

            <h1 class="mt-5 mb-3">External Login</h1>

            <div class="list-group">
                @foreach (var provider in Model.VisibleExternalProviders)
                {
                    <a class="list-group-item list-group-item-action"
                       asp-controller="External"
                       asp-action="Challenge"
                       asp-route-provider="@provider.AuthenticationScheme"
                       asp-route-returnUrl="@Model.ReturnUrl">
                        @provider.DisplayName
                    </a>
                }
            </div>
        </div>

        <p>Or</p>
        <div class="col-md-12">

            <form asp-route="Login">
                <input type="hidden" asp-for="ReturnUrl" />

                <div class="form-group">
                    <label asp-for="FullName"></label>
                    <input class="form-control" placeholder="FullName" asp-for="FullName" autofocus>
                </div>

                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input class="form-control" placeholder="Username" asp-for="Email" autofocus>
                </div>

                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                </div>

                <div class="form-check">
                    <input type="checkbox" asp-for="IsTeacher" class="form-check-input">
                    <label asp-for="IsTeacher" class="form-check-label">I am a teacher</label>
                </div>

                <div class="mt-4 mb-4">
                    <button class="btn btn-primary" name="button" value="login">Sign up</button>
                </div>

                <partial name="_ValidationSummary" />
            </form>
        </div>
        <div class="col-md-12">
            <div class="row">
                <p>By creating an account, you fully agree with <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a></p>
            </div>

        </div>

        </div>
