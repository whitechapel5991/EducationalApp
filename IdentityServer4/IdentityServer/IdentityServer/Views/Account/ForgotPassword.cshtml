@model ForgotPasswordViewModel

<h1>Just write your email address!</h1>

<div class="row">

    <div class="col-md-4">

        <h1 class="mt-5 mb-3">Login</h1>

        <form asp-route="Login">
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="form-group">
                <label asp-for="Email"></label>
                <input class="form-control" placeholder="Email" asp-for="Email" autofocus>
            </div>

            <div class="mt-4 mb-4">
                <button class="btn btn-primary" name="button" value="login">Reset password</button>
            </div>

            <partial name="_ValidationSummary" />
        </form>
    </div>
</div>
